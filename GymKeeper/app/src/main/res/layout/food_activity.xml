<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="#E9E9E9"
	    android:layout_weight="3"
	    android:layout_margin="10dp" >
	    
	    <LinearLayout
		     android:orientation="horizontal"
		     android:background="#E3E3E3"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content">
		     
		    <AutoCompleteTextView
		        android:id="@+id/actvFood"
		        android:textColor="#727e88"
		        android:hint="食物名"
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:completionHint="请选择食品"
		        android:completionThreshold="1"
		        android:dropDownHeight="wrap_content">
		        <requestFocus />
		    </AutoCompleteTextView>
		    
		    <Button
		        android:id="@+id/searchBtn"
		        android:background="@drawable/button"
		        android:layout_width="match_parent"
		        android:layout_weight="2"
		        android:layout_height="wrap_content"
		        android:textColor="#fff"
		        android:text="查询" />
		    
		    <Button
		        android:id="@+id/addfoodBtn"
		        android:background="@drawable/button"
		        android:layout_width="match_parent"
		        android:layout_weight="2"
		        android:layout_height="wrap_content"
		        android:textColor="#fff"
		        android:text="自定" />
	    </LinearLayout>
	    
	    <LinearLayout
		     android:orientation="horizontal"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:paddingTop="5dp"
		     >
		    
	        <Button
		        android:id="@+id/deletefoodBtn"
				android:textColor="#888"
				android:backgroundTint="#eee"
		        android:layout_width="380dp"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:visibility="invisible"
		        android:text="-删除" />
	        
		    <TextView 
		        android:id="@+id/nutrientResult"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:textColor="#727e88"
				android:gravity="center" />
		    
		    <com.google.android.material.button.MaterialButton
		        android:id="@+id/adddietBtn"
		    	android:textColor="#888"
				android:backgroundTint="#eee"
		        android:layout_width="380dp"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:visibility="invisible"
		        android:text="+饮食" />

		</LinearLayout>
	</LinearLayout>
    
    <ListView
        android:id="@+id/nutrientList"
        android:layout_width="match_parent"
     	android:layout_height="match_parent"
     	android:paddingBottom="55dp"
     	android:layout_weight="1"
     	android:layout_margin="10dp"
     	/>
    
</LinearLayout>
